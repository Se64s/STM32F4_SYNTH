{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",

    "tasks": [

    //*************************************************************************
    //
    // APP TASKS
    //
    //*************************************************************************

        {
            "type": "shell",
            "label": "Build App",
            "command": "mingw32-make.exe",
            "args": [
                "GCC_PATH=${config:ARMToolChainPath}",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Flash App",
            "command": "${workspaceRoot}/Tools/jlink/jlink_flasher.bat",
            "args": [
                "${config:JlinkApp}",
                "STM32F446RE",
                "${workspaceRoot}/build/STM32F4_SYNTH.bin",
                "0x8000000"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Build & Flash App",
            "command": "",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build App",
                "Flash App"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },

    //*************************************************************************
    //
    // MISC TASKS
    //
    //*************************************************************************

        {
            "type": "shell",
            "label": "Clean All",
            "command": "mingw32-make.exe",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Flash Erase",
            "command": "${workspaceRoot}/Tools/jlink/jlink_flash_erase.bat",
            "args": [
                "${config:JlinkApp}",
                "STM32F446RE"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Segger SWO Viewer",
            "command": "${config:JlinkSWOViewer}",
            "args": [
                "-device",
                "STM32F446RE",
                "-swofreq",
                "500000",
                "-cpufreq",
                "0",
                "-itmport",
                "0xF"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "PyTerm",
            "command": "${config:python.pythonPath} -m serial.tools.miniterm",
            "args": [
                "COM5",
                "115200"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "problemMatcher": []
        },

    ],
}